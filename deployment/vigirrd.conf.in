<IfModule !mod_wsgi.c>
LoadModule wsgi_module modules/mod_wsgi.so
</IfModule>

<IfModule mod_wsgi.c>

WSGISocketPrefix /var/run/wsgi
WSGIRestrictStdout off
WSGIPassAuthorization on
WSGIDaemonProcess vigirrd user=@HTTPD_USER@ group=@HTTPD_USER@ processes=4 threads=1
WSGIScriptAlias /vigilo/vigirrd "@SYSCONFDIR@/vigilo/vigirrd/vigirrd.wsgi"

KeepAlive Off

<Directory "@SYSCONFDIR@/vigilo/vigirrd/">
    <IfModule mod_headers.c>
        Header set X-UA-Compatible "IE=edge"
    </IfModule>

    <Files "vigirrd.wsgi">
        WSGIProcessGroup vigirrd
        WSGIApplicationGroup %{GLOBAL}

        <IfModule mod_authz_core.c>
                # Apache 2.4
                Require all granted
        </IfModule>
        <IfModule !mod_authz_core.c>
                # Apache 2.2
                Order Deny,Allow
                Allow from all
        </IfModule>
    </Files>
</Directory>

</IfModule>
